<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
<link rel="stylesheet" href="style.css"> 
<body onload="loading()">
    <div id="loading"></div>
<% include partials/header %>

<div class="container">
    <div class="row ">
        <div class="thumbnail login-padding">
            <h1 style="text-align:center;"> Register a <em> New User </em> </h1>
            <div style="width:50%; margin: 25px auto">
                <form action="/register" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="firstname" placeholder="First Name" required="required">
                        <input class="form-control" type="text" name="lastname" placeholder="Last Name" required="required">
                        <input class="form-control" type="text" name="number" placeholder="Phone Number" required="required">
                        <input class="form-control" type="date" name="dob" value="yyyy-mm-dd" id="example-date-input" required="required">
                        <div class="form-group"><label >male</label>
                            <input type="radio"  name="gender" value="male" />
                            <label >female</label><input type="radio"  name="gender" value="female" /></div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="Username" required="required">
                        <input class="form-control" type="password" name="password" placeholder="Password" required="required">
                        <h5 style="color: red;">Please Check details you entered. Contact Customer Care<br>*Note*Your Username Must Be Unique</h5>    
                    </div>By clicking Sign Up, you agree to our Terms , Data Policy and Cookie Policy . We may send you SMS notifications. You can opt out to stop receiving them whenever you want.
                    <div class="form-group"><br>
                        <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
                    </div>
                </form>
                <br>
                <a href="/map">Go back</a>
            </div>
        </div>
        
    </div>
    
</div>
<div class="bg-warning">       
    <% include ./partials/footer.ejs %></div>  

    <script>
        var preloader = document.getElementById('loading'); 
        function loading() {
          preloader.style.display ='none';
        }
      </script>
      </body>
